<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xsi:schemaLocation=" http://code.alibabatech.com/schema/dubbo
        http://code.alibabatech.com/schema/dubbo/dubbo.xsd">

    <!-- 提供方应用信息，用于计算依赖关系 -->
    <dubbo:application name="com.soa.order"/>
    <!-- 使用multicast广播注册中心暴露服务地址 -->
    <dubbo:registry protocol="zookeeper" address="192.168.191.1:2181"/>
    <!-- 用dubbo协议在20880端口暴露服务 -->
    <dubbo:protocol name="dubbo" port="20880"/>
    <!-- 使用注解方式暴露接口 -->
    <!-- <dubbo:annotation package="com.geek.provider" /> -->

    <dubbo:service interface="com.soa.order.facade.OrderFacade" ref="userFacade"/>
    <bean id="userFacade" class="com.soa.order.facade.OrderFacadeImpl"/>

</beans>